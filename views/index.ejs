<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <div>
        <a href="/new">New Message</a>
    </div>
    <div>
        <% messages.map((message, index)=> { %>
            <div>
                <h1>
                    <%= message.text %>
                </h1>
                <p>
                    <%= message.user %>
                </p>
                <p>
                    <%= message.added %>
                </p>

                <a href="/message/<%= index %>">More Info</a>
            </div>
        <% }) %>
    </div>
</body>

</html>